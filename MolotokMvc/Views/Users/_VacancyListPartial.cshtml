@model List<MolotokMvc.Models.Vacancy>

<div class="card shadow-sm mb-3">
    <div class="card-header bg-success text-white">
        <h5>Vacancies</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Position</th>
                    <th>Description</th>
                    <th>Tags</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="window.location.href='@Url.Action("Details", "Vacancy", new { id = item.Id })'" style="cursor: pointer;">
                        <td>@item.Position</td>
                        <td>@item.Description</td>
                        <td>@item.Tags</td>
                        <td>@item.CreatedAt.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
