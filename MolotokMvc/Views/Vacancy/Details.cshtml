@model MolotokMvc.Models.Vacancy

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Vacancy: @Model.Position</h3>
        </div>
        <div class="card-body">
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Tags:</strong> @Model.Tags</p>
            <p><strong>Created At:</strong> @Model.CreatedAt.ToShortDateString()</p>
        </div>
        <div class="card-footer">
            <button onclick="window.history.back()" class="btn bg-success text-white">Back</button>
        </div>
    </div>
</div>
